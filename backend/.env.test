# ========================================
# LOCAL TEST DATABASE CONFIGURATION (Docker)
# ========================================
# Copy this to .env.test when running tests with Docker Postgres
# Start the test DB: docker-compose -f docker-compose.test.yml up -d

# Test Database Connection (Local Docker)
TEST_DB_HOST=localhost
TEST_DB_PORT=5434
TEST_DB_NAME=aves_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=test_password

# Main pool connection for services
DB_HOST=localhost
DB_PORT=5434
DB_NAME=aves_test
DB_USER=postgres
DB_PASSWORD=test_password
DB_SSL_ENABLED=false
DB_ALLOW_EXIT_ON_IDLE=true

# ========================================
# SECURITY KEYS (Test values only)
# ========================================
JWT_SECRET=test-jwt-secret-for-local-testing-only
JWT_EXPIRES_IN=24h
SESSION_SECRET=test-session-secret-for-local-testing-only

# ========================================
# AI FEATURES (Disabled for unit tests)
# ========================================
ANTHROPIC_API_KEY=
ENABLE_VISION_AI=false
ENABLE_EXERCISE_GENERATION=false

# ========================================
# TEST FLAGS
# ========================================
NODE_ENV=test
# Set to true to run auth integration tests (requires Docker test DB)
RUN_AUTH_INTEGRATION_TESTS=false
# Set to true to run all integration tests
RUN_INTEGRATION_TESTS=false
