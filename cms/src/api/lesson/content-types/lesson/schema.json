{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Learning lessons and modules"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "objectives": {
      "type": "json",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner",
      "required": true
    },
    "duration": {
      "type": "integer",
      "required": true,
      "min": 5,
      "max": 120
    },
    "order": {
      "type": "integer",
      "required": true,
      "unique": false
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "identification",
        "habitat",
        "behavior",
        "conservation",
        "vocabulary",
        "culture"
      ],
      "required": true
    },
    "birds": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::bird.bird",
      "mappedBy": "lessons"
    },
    "quizzes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quiz.quiz",
      "mappedBy": "lesson"
    },
    "prerequisites": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson"
    },
    "resources": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "tags": {
      "type": "json"
    }
  }
}