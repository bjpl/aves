{
  "kind": "collectionType",
  "collectionName": "quizzes",
  "info": {
    "singularName": "quiz",
    "pluralName": "quizzes",
    "displayName": "Quiz",
    "description": "Quiz questions for lessons"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "multiple_choice",
        "true_false",
        "image_identification",
        "sound_identification",
        "fill_blank"
      ],
      "required": true
    },
    "options": {
      "type": "json",
      "required": false
    },
    "correctAnswer": {
      "type": "json",
      "required": true,
      "private": false
    },
    "explanation": {
      "type": "richtext"
    },
    "points": {
      "type": "integer",
      "default": 10,
      "min": 1,
      "max": 100
    },
    "media": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "audios"
      ]
    },
    "lesson": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::lesson.lesson",
      "inversedBy": "quizzes"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ],
      "default": "medium"
    }
  }
}