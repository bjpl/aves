# Environment Variables for Docker Compose
# Copy this file to .env and fill in your values

# ============================================================================
# Application Environment
# ============================================================================
NODE_ENV=production

# ============================================================================
# Database Configuration
# ============================================================================
DB_NAME=aves
DB_USER=postgres
DB_PASSWORD=CHANGEME_strong_password_here
DB_PORT=5432

# ============================================================================
# Backend Configuration
# ============================================================================
BACKEND_PORT=3001

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_PORT=80
FRONTEND_URL=http://localhost

# Vite Environment Variables
VITE_API_URL=http://localhost:3001
VITE_API_VERSION=v1
VITE_ENABLE_UNSPLASH=true
VITE_ENABLE_AI_EXERCISES=true
VITE_ENABLE_VISION_AI=true
VITE_DEBUG_MODE=false

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================

# Anthropic API Key (Required for Claude Sonnet 4.5 - AI exercises & Vision)
ANTHROPIC_API_KEY=sk-ant-api03-CHANGEME

# OpenAI API Key (Optional - legacy support)
OPENAI_API_KEY=

# Unsplash API Key (Optional - for image sourcing)
UNSPLASH_ACCESS_KEY=

# ============================================================================
# Security Secrets (REQUIRED - Change in Production!)
# ============================================================================

# Session Secret (used for session encryption)
SESSION_SECRET=CHANGEME_random_string_min_32_characters

# JWT Secret (used for JWT token signing)
JWT_SECRET=CHANGEME_random_string_min_32_characters

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_VISION_AI=true
ENABLE_EXERCISE_GENERATION=true
ENABLE_BATCH_PROCESSING=true
